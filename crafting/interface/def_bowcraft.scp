RegenHits = 2

[function f_colored_weaps_bloodwood]
if !<istevent.ei_equipitem>
events +ei_equipitem
endif
RegenHits = 2
HitLeechLife = 16

[function f_colored_armor_heartwood]
if !<istevent.ei_equipitem>
events +ei_equipitem
endif
dorand 6
	Luck = 40
	hitpoints += <eval <hitpoints> / 2>
	LowerReq = 20
	IncreaseDam = 10
	IncreaseHitChance = 5
	MageArmor = 1
enddo

[function f_colored_shield_heartwood]
if !<istevent.ei_equipitem>
events +ei_equipitem
endif
dorand 7
	BonusDEX = 2
	BonusStr = 2
	RESPHYSICAL = 5
	ReflectPhysicalDam = 5
	SelfRepair = 2
	RESCOLD = 3
	SpellChanneling = 1
enddo

[function f_colored_weaps_heartwood]
if !<istevent.ei_equipitem>
events +ei_equipitem
endif
dorand 7
	Luck = 40
	hitpoints += <eval <hitpoints> / 2>
	LowerReq = 20
	IncreaseSwingSpeed = 10
	IncreaseHitChance = 5
	HitLeechLife = <r100>
	Luck = 10
enddo

[function f_colored_shield_frostwood]
if !<istevent.ei_equipitem>
events +ei_equipitem
endif
SpellChanneling = 1
FasterCasting = -1

[function f_colored_weaps_frostwood]
if !<istevent.ei_equipitem>
events +ei_equipitem
endif
IncreaseDam = 12
DamCold = 40

