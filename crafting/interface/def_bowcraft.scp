[function f_colored_armor_oak]
if !<istevent.t_iprop>
events +t_iprop
endif
Luck = <eval <Luck> + 40>

[function f_colored_weaps_oak]
if !<istevent.ei_equipitem>
events +ei_equipitem
endif
Luck = <eval <Luck> + 40>
IncreaseDam = 5

[function f_colored_armor_ash]
LowerReq = 20

[function f_colored_weaps_ash]
if !<istevent.ei_equipitem>
events +ei_equipitem
endif
IncreaseSwingSpeed = 10
LowerReq = 20

[function f_colored_armor_yew]
